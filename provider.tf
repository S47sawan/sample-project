
# ----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
# Terraform Provider
#--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
variable "region" {
  type        = string
  description = "This the region where the resources will be deployed"
  default     = ""
}
# ----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
# Terraform Provider
#--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 4.0"
    }
  }
}
# Configure the AWS Provider
provider "aws" {
  region = var.region
}

